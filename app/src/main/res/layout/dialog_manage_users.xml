<?xml version="1.0" encoding="utf-8"?>

<!--Relative Layout is used-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_grey"
    android:padding="25dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activities.AdminActivity">

    <!--Image View for Close Window-->

    <ImageButton
        android:id="@+id/btn_close_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@color/light_grey"
        app:srcCompat="@drawable/close_window" />

    <!--Text View for Title-->

    <TextView
        android:id="@+id/tv_manage_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_close_window"
        android:gravity="center"
        android:fontFamily="@font/tama_font"
        android:text="Manage Users"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <!--Button for Add Admin User-->

    <Button
        android:id="@+id/btn_add_admin_user"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_manage_users"
        android:fontFamily="@font/tama_font"
        android:text="Add admin user"
        android:textAlignment="textStart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <!--Button for Delete User-->

    <Button
        android:id="@+id/btn_delete_user"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_add_admin_user"
        android:fontFamily="@font/tama_font"
        android:text="Delete user"
        android:textAlignment="textStart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/red"
        android:textSize="15sp" />

    <!--Button for Delete Account-->

    <Button
        android:id="@+id/btn_delete_account"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_delete_user"
        android:fontFamily="@font/tama_font"
        android:text="Look up user info"
        android:textAlignment="textStart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>