<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="203dp">

    <!--Relative Layout is Used-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_middle"
        tools:context=".activities.HomeActivity">

        <!--Image View for Middle Screen (egg idle)-->

        <ImageView
            android:id="@+id/iv_middle_screen"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <!--Image View for Middle Screen 2 (tama idle)-->

        <ImageView
            android:id="@+id/iv_middle_screen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <!--Image View for Middle Screen (sleep idle)-->

        <ImageView
            android:id="@+id/iv_middle_screen3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <!--Image View for Egg (egg hatched)-->

        <ImageView
            android:id="@+id/iv_egg"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:src="@drawable/egg_hatched" />

        <!-- Image View for Poop Animation -->

        <ImageView
            android:id="@+id/iv_poop_animation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_egg"
            android:src="@drawable/animation_poop"
            android:visibility="invisible" />

    </RelativeLayout>

</FrameLayout>